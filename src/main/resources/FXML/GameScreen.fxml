<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<BorderPane fx:controller="org.dionthorn.isekairpg.controllers.GameScreenController" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox fx:id="topBar" style="-fx-background-color: #336699; -fx-font: 20 Consolas;" minHeight="32">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Region HBox.hgrow="ALWAYS"/>
            <Text fx:id="timeInfo"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="centerGridPane" style="-fx-font: 12 Consolas;" minWidth="32">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </GridPane>
    </center>
    <left>
        <VBox fx:id="leftBar" style="-fx-background-color: #336699; -fx-font: 12 Consolas;" minWidth="32">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Text fx:id="playerSheet"/>
        </VBox>
    </left>
    <right>
        <VBox fx:id="rightBar" style="-fx-background-color: #336699; -fx-font: 12 Consolas;" minWidth="32">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Region VBox.vgrow="ALWAYS"/>
            <Button fx:id="waitBtn" text="Wait" onAction="#onWait"/>
        </VBox>
    </right>
    <bottom>
        <TextArea fx:id="console" prefWidth="1024" prefHeight="192" style="-fx-font: 12 Consolas;"/>
    </bottom>
</BorderPane>